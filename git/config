[core]
  excludesfile = ~/dotfiles/git/global_gitignore
  pager = delta

[user]
  email = mcj.simka@gmail.com
  name = maciej simka

[commit]
  template = ~/dotfiles/git/commit_template
  verbose = true

[merge]
  tool = vimdiff
  conflictstyle = diff3

[mergetool]
  keepBackup = false

[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[interactive]
  diffFilter = delta --color-only

[rerere]
  enabled = true

[color]
  ui = auto

[color "branch"]
  current = yellow
  local = 241
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = green
  changed = yellow
  untracked = magenta
